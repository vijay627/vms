<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" 
	xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  
  <filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	
	
	<!-- initialize spring framework in case of servlet 2.4 -->
	<listener>
		<description>Spring init</description>
		<display-name>Spring init</display-name>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<!-- /WEB-INF/gen-dwr.xml -->
		<param-value>
		    /WEB-INF/applicationContext.xml
		    /WEB-INF/vms-dwr.xml
		    /WEB-INF/vms-servlet.xml
		    /WEB-INF/vms-controller.xml
		    /WEB-INF/spring-data.xml 
			/WEB-INF/spring-dao.xml
			/WEB-INF/spring-transactions.xml
		    /WEB-INF/vms-command.xml
		</param-value>
	</context-param>
	
	<filter>
    <filter-name>openSessionInViewFilter</filter-name>
    <filter-class>org.springframework.orm.hibernate3.support.OpenSessionInViewFilter</filter-class>
    <init-param>
        <param-name>singleSession</param-name>
      <param-value>false</param-value>
    </init-param>
</filter>
  
  <servlet>
	  <servlet-name>vms</servlet-name>
	  <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	  <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
  	<servlet-name>vms</servlet-name>
  	<url-pattern>*.spr</url-pattern>
  </servlet-mapping>

	<servlet>
        <description>Spring implementation of the dwr servlet</description>
        <servlet-name>dwr</servlet-name>
        <servlet-class>org.directwebremoting.servlet.DwrServlet</servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>crossDomainSessionSecurity</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>overridePath</param-name>
            <param-value>/vms/dwr</param-value>
        </init-param>
        
        <load-on-startup>1</load-on-startup>
    </servlet>
	
	
	<servlet-mapping>
        <servlet-name>dwr</servlet-name>
        <url-pattern>/dwr/*</url-pattern>
    </servlet-mapping>

 
  
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
